{
    "name": "msgframework/image",
    "description": "This library help to manipulate with images: crop, resize, change quality and watermarking.",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "msgframework/file": "^v0.0.5"
    },
    "license": "MIT",
    "keywords": ["image", "gd", "imagick", "watermark", "resize"],
    "autoload": {
        "psr-4": {
            "Msgframework\\Lib\\Image\\": "",
            "MSGFramework\\Lib\\Image\\Exception\\": "/Exception"
        }
    },
    "authors": [
        {
            "name": "MSGroupFM",
            "email": "admin@msgru.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.3"
    },
    "suggest": {
        "ext-gd": "To use GD library based image processing.",
        "ext-imagick": "To use Imagick based image processing."
    }
}
